ask] (C:\lweein\SkywenWork\Code\lweeintalk\node_modules\undertaker\lib\set-task.js:10:3)&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    at Gulp.task (C:\lweein\SkywenWork\Code\lweeintalk\node_modules\undertaker\lib\task.js:&lt;span class=&quot;number&quot;&gt;13&lt;/span&gt;:&lt;span class=&quot;number&quot;&gt;8&lt;/span&gt;)&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    at &lt;span class=&quot;built_in&quot;&gt;Object&lt;/span&gt;.&amp;lt;anonymous&amp;gt; (C:\lweein\SkywenWork\Code\lweeintalk\gulpfile.js:&lt;span class=&quot;number&quot;&gt;31&lt;/span&gt;:&lt;span class=&quot;number&quot;&gt;6&lt;/span&gt;)&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    at Module._compile (internal/modules/cjs/loader.js:&lt;span class=&quot;number&quot;&gt;689&lt;/span&gt;:&lt;span class=&quot;number&quot;&gt;30&lt;/span&gt;)&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    at &lt;span class=&quot;built_in&quot;&gt;Object&lt;/span&gt;.Module._extensions..js (internal/modules/cjs/loader.js:&lt;span class=&quot;number&quot;&gt;700&lt;/span&gt;:&lt;span class=&quot;number&quot;&gt;10&lt;/span&gt;)&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    at Module.load (internal/modules/cjs/loader.js:&lt;span class=&quot;number&quot;&gt;599&lt;/span&gt;:&lt;span class=&quot;number&quot;&gt;32&lt;/span&gt;)&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    at tryModuleLoad (internal/modules/cjs/loader.js:&lt;span class=&quot;number&quot;&gt;538&lt;/span&gt;:&lt;span class=&quot;number&quot;&gt;12&lt;/span&gt;)&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    at &lt;span class=&quot;built_in&quot;&gt;Function&lt;/span&gt;.Module._load (internal/modules/cjs/loader.js:&lt;span class=&quot;number&quot;&gt;530&lt;/span&gt;:&lt;span class=&quot;number&quot;&gt;3&lt;/span&gt;)&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    at Module.require (internal/modules/cjs/loader.js:&lt;span class=&quot;num